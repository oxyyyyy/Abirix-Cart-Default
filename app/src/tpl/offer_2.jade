doctype html
html(lang="#{common[0].current_lang}")
	include include/head.jade
	body(class="lang_#{common[0].current_lang} page_cart")
		.product_container.no_padding_bottom
			.discount
				.container
					span #{common[0].discount[0].discount_3[0]}
					| #{common[0].discount[0].discount_3[1]} 
					span.icon.icon_podarok
					| #{common[0].discount[0].discount_3[2]}
			include include/top_line.jade
			.order_container
				.container
					include include/info_line.jade
					.row
						.col-sm-8.costume_padding.content_side
							.title_container
								span #{common[0].order_offer_title[0]}
									.icon_final
							.offer_final
								.offer_border
									.bg
											img(src="img/common/product_avatar_offer_final.png", alt="")
									.offer_header
										.offer_discount
											| #{common[0].offer_2[0]}<sup>#{common[0].offer_2[1]}</sup>, 
											span #{common[0].offer_2[2]}
										.offer_text
											| #{common[0].offer_2[3]}
											br
											| #{common[0].offer_2[4]}
									.offer_middle
										.image
											img(src="img/common/product/offer_2/product_1.png", alt="")
										.right_side
											.text #{common[0].offer_2[5]} 
											.price_container
												.price
													strong #{common[0].offer_2[6]}
													span #{common[0].offer_2[7]} <br> #{common[0].offer_2[8]}
												| #{common[0].offer_2[9]}
							include include/garant.jade
						.col-sm-4.costume_padding.sidebar_side
							.title_container
								span #{common[0].order_title[0]}
								i #{common[0].order_title[1]}
							include include/order_form.jade
		include include/video.jade
		include include/footer.jade